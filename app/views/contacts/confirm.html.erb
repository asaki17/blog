<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @contact, uri: contacts_path, local: true) do |form| %>

 <%= form.hidden_field :name %>
 <%= form.hidden_field :mail %>
 <%= form.hidden_field :content %>
 
 <p>名前:<%= @contact.name %></p>
 <p>mail:<%= @contact.mail %></p>
 <p>コンテンツ:<%= @contact.content %></p>
 <%= form.submit "登録する" %>
 <% end %>
 
 
 <%= form_with(model: @contact, url: new_contact_path, local: true, method: 'get') do |form| %>
 <%= form.hidden_field :name %>
 <%= form.hidden_field :mail %>
 <%= form.hidden_field :content %>
 <%= form.submit "戻る", name: 'back' %>
 <% end %>
 
 