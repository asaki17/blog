<h1>ブログ一覧</h1>

<p><%= notice %></p>

<table>
    <tr>
        <th>名前</th>
        <th>メール</th>
        <th>コンテンツ</th>
    </tr>

<% @contacts.each do |contact| %>
  <tr>
      <td><%= contact.name %></td>
      <td><%= contact.mail %></td>
      <td><%= contact.content %></td>
      <td><%= link_to "ブログを編集する",edit_contact_path(contact.id) %></td>
      <td><%= link_to "ブログを削除する",contact_path(contact.id), method: :delete , data: { confirm: "本当に削除してもよろしいですか？"} %></td>
  </tr>
<% end %>
</table>


<%= link_to "ブログ新規作成画面へ",new_contact_path %>
